<div class="container">
  <%= render 'shared/errors' %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Recipe Title" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10,class: "form-control shadow rounded", placeholder: "Recipe description" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "col-2 btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
      <%= link_to '[ Cancel and return to the recipes page ]', articles_path, class: "text-info row justify-content-center" %>
    </div>
  </div>
</div>